@model ManagePersonWebUI.Models.PersonViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Person</h1>

<h4>Manage Person</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="AddPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label><br />
                <input asp-for="Gender" type="radio" value="M" /><label>M</label>
                <input asp-for="Gender" type="radio" value="F" /><label>F</label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IsEmployed" type="checkbox" value="true" />
                <label asp-for="IsEmployed" class="control-label"></label>
                <span asp-validation-for="IsEmployed" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="IdMaritalstatus" class="control-label">Marital Status</label>
            <div class="form-group">
                <fieldset asp-for="IdMaritalstatus" >
                    <select id="IdMaritalstatus" name="IdMaritalstatus" class="form-control">

                        <option value="1">I/E Martuar</option>

                        <option value="2">I/E ndare</option>

                        <option value="3">I/E Ve</option>

                        <option value="4">Beqar/e</option>


                    </select>

                </fieldset>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="PlaceofBirth" class="control-label"></label>
                <input asp-for="PlaceofBirth" class="form-control" />
                <span asp-validation-for="PlaceofBirth" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}